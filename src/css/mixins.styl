flexbox(dir = row, jc = flex-start, ai = flex-start, gap = 0)
  display flex
  flex-direction dir
  justify-content jc
  align-items ai
  gap gap

centerChild()
  display flex
  flex-direction row
  justify-content center
  align-items center

button()
  cursor pointer
  user-select none

opacityButton()
  cursor pointer
  user-select none
  transition opacity 0.2s
  -webkit-tap-highlight-color transparent
  @media (hover hover)
    &:hover
      transition opacity 0s
      opacity 0.9
  &:active
    transition opacity 0s
    opacity 0.6

iconSize(size)
  centerChild()
  width size
  height size
  font-size size
  flex-shrink 0

hideScrollbar()
  -ms-overflow-style none
  scrollbar-width none
  &::-webkit-scrollbar
    display none

Font(fz = unset, w = unset, lh = unset)
  font-size fz
  font-weight w
  line-height lh

Display(fw = 500)
  Font(48px, fw, 56px)

Heading(fw = 500)
  Font(28px, fw, 36px)

Subtitle(fw = 500)
  Font(20px, fw, 28px)

Button(fw = 500)
  Font(18px, fw, 28px)

Body(fw = 500)
  Font(16px, fw, 24px)

Caption(fw = 500)
  Font(14px, fw, 20px)
