flexbox(dir = row, jc = flex-start, ai = flex-start, gap = 0)
  display flex
  flex-direction dir
  justify-content jc
  align-items ai
  gap gap

centerChild()
  display flex
  flex-direction row
  justify-content center
  align-items center

button()
  cursor pointer
  user-select none

opacityButton()
  cursor pointer
  user-select none
  transition opacity 0.2s
  -webkit-tap-highlight-color transparent
  @media (hover hover)
    &:hover
      transition opacity 0s
      opacity 0.9
  &:active
    transition opacity 0s
    opacity 0.6

iconSize(size)
  centerChild()
  width size
  height size
  font-size size
  flex-shrink 0

hideScrollbar()
  -ms-overflow-style none
  scrollbar-width none
  &::-webkit-scrollbar
    display none

Font(fz = unset, w = unset, lh = unset)
  font-size fz
  font-weight w
  line-height lh

Display(fw = 400)
  Font(48px, fw, 1.2)

Heading(fw = 400)
  Font(36px, fw, 1.2)

Subtitle(fw = 400)
  Font(24px, fw, 1.2)

Button(fw = 400)
  Font(20px, fw, 1.3)

Body(fw = 400)
  Font(18px, fw, 1.3)

Caption(fw = 400)
  Font(14px, fw, 1.5)
